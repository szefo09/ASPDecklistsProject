@model DecklistProjectASP.ViewModel.CardForSearch

@{
    ViewData["Title"] = "Search For Card";
}

<h2>Search For Card</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchForCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardIdentifier" class="control-label"></label>
                <input asp-for="CardIdentifier" class="form-control" />
                <span asp-validation-for="CardIdentifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
