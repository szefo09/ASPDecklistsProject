@model IEnumerable<DecklistProjectASP.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h2>Cards Menu:</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p >
    <a class="btn btn-warning" asp-action="Update">Download new Card Database From API</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardIdentifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardIdentifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
